<h1>Welcome to HQ Trivia you dumb nerd</h1>
<%= erb :login %>
<a href="/questions/new">Add a new question</a>
<% @questions.each do |question| %>
	<div class="question">
		<strong><%= question.body%></strong>
		<ol>
			<li><%= question.option1 %></li>
			<li><%= question.option2 %></li>
			<li><%= question.option3 %></li>
		</ol>
		<div class="players">
			<ul>
				<% question.users.each do |user| %>
				<li><%= user.first %> <%= user.last %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
